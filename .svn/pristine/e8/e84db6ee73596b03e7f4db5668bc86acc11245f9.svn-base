<script>

	function DoSecession()
	{
		var se = confirm('회원탈퇴를 하시겠습니까?');
		if(se)
		{
			alert("탈퇴가 완료되었습니다.");
			location.href="../startpage/Firstpage.jsp";
		}else
		{
			alert("탈퇴가 취소되었습니다.");
		}
	}
	
	function savepw()
	{
		alert("변경되었습니다.");
	}
	
	function nickupdate()
	{
		$("#nickchange").click(function()
		{
			$("#nickline").html("<input type='text' value='조소'>");
		})
	}
	
	function nicksavecomplete()
	{
		$("#nicksave").click(function()
		{
			$("#nickline").html("조소");
		})
	}
	
</script>
</head>
<style>

</style>
<body>
	<!-- 상단 로그아웃 버튼 -->
	<div id="first">
