<%@ page language="java" contentType="text/html; charset=EUC-KR"
    pageEncoding="EUC-KR"%>
<!DOCTYPE html>
<html>
<head>
<meta charset="EUC-KR">
<title>AddChat</title>
<style>
#addWrap {
    width: 500px;
    border: 1px solid #0084FF;
    border-radius: 5px;
}


#addHeader {
    background-color: #0084FF;
    color: #fff;
    height: 40px;
    font-size: 18px;
    line-height: 40px;
    text-align: center;
    border-radius: 5px;
}

#addForm {
    display: block;
    width: 100%;
    height: 50px;
    border-top: 2px solid #f0f0f0;
}

#idinput {
    width: 85%;
    height: calc(100% - 1px);
    border: none;
    padding-bottom: 0;
}

#idinput:focus {
    outline: none;
}

#addForm > input[type=submit] {
    outline: none;
    border: none;
    background: none;
    color: #0084FF;
    font-size: 17px;
}
</style>
</head>
<body>
	<div id="addWrap">
		<div id="addHeader">대화 상대 추가 </div>
   	  	<div> 
   	  		<form id="addForm">
                <input type="text" autocomplete="off" size="30" id="idinput" placeholder="대화상대 아이디를 입력하세요">
                <input type="submit" value="확인">
            </form>
        </div>              
    </div>
</body>
</html>