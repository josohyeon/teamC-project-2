<META HTTP-EQUIV="CACHE-CONTROL" CONTENT="NO-CACHE">
<title>마이페이지</title>
<script src="../js/jquery-3.5.1.min.js"></script>	
<script>
	function tlist()
	{
		$.ajax({
			url:"Trainersearchok.jsp",
			type:"GET",
			data:$("#tsearch").serialize(),
			success:function(data)
			{
				var output = "";
				if(data.trim() != "1"){
					var json = JSON.parse(data);
					for(var i=0; i<json.length; i++)
					{	
						output += "<tr><th>닉네임</th><th>근무지</th><th>만족도</th><th>PT신청하기</th><tr>";
						output += "<tr>";
						output += "<td>"+json[i].t_nick+"</td>";
						output += "<td>"+json[i].t_addr1+"&nbsp;"+json[i].t_addr2+"</td>";
						output += "<td>"+json[i].t_score+"</td>"
						output += "<td><button type='button' class='btn btn-primary' onclick='ptapply("+json[i].t_no+")'>PT신청</button></td>";
						output += "</tr>";
					}
					$("#slist").append(output);
				}else{
					alert("존재하지 않는 닉네임입니다.");	
				}
			}
		});
	}
	
	function ptapply(t)
	{
		var confirmVal = confirm("신청하시겠습니까?");
		if(confirmVal){
			var u_id = $("#u_id").val();
			$.ajax({
				url:"Trainerapplyok.jsp",
				type:"POST",
				data:"t_no="+t,
				success:function(data)
				{
					if(data == "1"){
						alert("신청이 완료 되었습니다.");
					}else{
						alert("잘못된 접근입니다.");
					}
				}
			});
		}
	}
	
</script>
</head>
