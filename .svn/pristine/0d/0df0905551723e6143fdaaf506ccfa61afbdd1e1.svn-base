<script>
	function DoSecession()
	{
		var se = confirm('회원을 탈퇴하시겠습니까?');
		if(se)
		{
			alert("회원탈퇴가 완료되었습니다.");
			location.href="../startpage/Firstpage.jsp";
		}else
		{
			alert("회원탈퇴가 취소되었습니다.");
		}
	}
	
	function savepw()
	{
		alert("비밀번호가 변경되었습니다.");
	}
	
	function nickupdate()
	{
		$("#nickchange").click(function()
		{
			$("#nickline").html("<input type='text' value='조소'>");
		})
	}
	
	function nicksavecomplete()
	{
		$("#nicksave").click(function()
		{
			$("#nickline").html("조소");
		})
	}
	
</script>
